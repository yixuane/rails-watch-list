<div class="container">
  <h1><%= @list.name %></h1>

  <%= link_to "Add New Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>

  <% @bookmarks.each do |bookmark| %>
    <div class="contianer mt-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="Poster">
          <p class="card-text">Comment: <%= bookmark.comment %></p>
          <p class="card-text">Rating: <%= bookmark.movie.rating %></p>
        </div>
      </div>
    </div>
  <% end %>

</div>
